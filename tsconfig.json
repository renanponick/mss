{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "inlineSourceMap": true,
    "strict": true,
    "outDir": "./build",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "isolatedModules": false,
    "lib": [
      "es2020.string",
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "scripts/*"
  ]
}
